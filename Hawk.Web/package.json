{
  "name": "hawk-web",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0"
  },
  "scripts": {
    "build:css": "npx tailwindcss --config ./tailwind.config.js -i ./Assets/tailwind.css -o ./wwwroot/css/app.css --minify",
    "watch:css": "npx tailwindcss --config ./tailwind.config.js -i ./Assets/tailwind.css -o ./wwwroot/css/app.css --watch"
  }
}
