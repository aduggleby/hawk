@page
@model Hawk.Web.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Security";
}

<div class="mb-4">
    <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Security</div>
    <h2 class="text-2xl font-semibold tracking-tight">Change password</h2>
</div>

<form method="post" class="space-y-4">
    <div asp-validation-summary="ModelOnly" class="hawk-error-message" role="alert"></div>

    <div>
        <label asp-for="Input.OldPassword" class="hawk-label"></label>
        <input asp-for="Input.OldPassword" class="hawk-input" autocomplete="current-password" />
        <span asp-validation-for="Input.OldPassword" class="hawk-error-message"></span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label asp-for="Input.NewPassword" class="hawk-label"></label>
            <input asp-for="Input.NewPassword" class="hawk-input" autocomplete="new-password" />
            <span asp-validation-for="Input.NewPassword" class="hawk-error-message"></span>
        </div>
        <div>
            <label asp-for="Input.ConfirmPassword" class="hawk-label"></label>
            <input asp-for="Input.ConfirmPassword" class="hawk-input" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="hawk-error-message"></span>
        </div>
    </div>

    <div class="flex items-center gap-2">
        <button type="submit" class="hawk-btn hawk-btn-primary">Save password</button>
        <a class="hawk-btn hawk-btn-ghost" asp-page="./Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="/Areas/Identity/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}

