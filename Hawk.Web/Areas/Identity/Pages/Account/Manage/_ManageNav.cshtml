@{
    var path = (ViewContext.RouteData.Values["page"]?.ToString()) ?? string.Empty;
    bool IsActive(string suffix) => path.EndsWith(suffix, StringComparison.OrdinalIgnoreCase);
}

<div class="text-xs font-mono uppercase tracking-tight text-zinc-500 mb-3">Account</div>
<nav class="space-y-2">
    <a class="hawk-btn hawk-menu-item @(IsActive("/Index") ? "bg-[color:var(--text-primary)] text-[color:var(--bg-primary)]" : "") w-full justify-start"
       asp-page="./Index">Profile</a>
    <a class="hawk-btn hawk-menu-item @(IsActive("/ChangePassword") ? "bg-[color:var(--text-primary)] text-[color:var(--bg-primary)]" : "") w-full justify-start"
       asp-page="./ChangePassword">Security</a>
    <a class="hawk-btn hawk-menu-item @(IsActive("/Settings") ? "bg-[color:var(--text-primary)] text-[color:var(--bg-primary)]" : "") w-full justify-start"
       asp-page="./Settings">Alerts & Crawler</a>
</nav>
