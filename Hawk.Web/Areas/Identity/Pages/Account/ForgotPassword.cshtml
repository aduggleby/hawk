@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot password";
}

<div class="mx-auto max-w-xl py-10">
    <div class="hawk-card">
        <div class="flex items-start justify-between gap-4 mb-6">
            <div>
                <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Auth</div>
                <h1 class="text-2xl font-semibold tracking-tight">Reset password</h1>
                <p class="text-sm text-zinc-600 mt-1">Enter your email to receive a reset link.</p>
            </div>
            <a class="hawk-btn hawk-btn-ghost hawk-btn-sm" asp-page="./Login">Back</a>
        </div>

        <form method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="hawk-error-message" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="hawk-label"></label>
                <input asp-for="Input.Email"
                       class="hawk-input"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com"
                       autofocus />
                <span asp-validation-for="Input.Email" class="hawk-error-message"></span>
            </div>

            <button type="submit" class="hawk-btn hawk-btn-primary w-full">Send reset link</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

