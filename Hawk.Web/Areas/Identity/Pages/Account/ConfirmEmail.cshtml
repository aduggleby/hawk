@page
@model ConfirmEmailModel

@{
    ViewData["Title"] = "Confirm email";
}

<div class="mx-auto max-w-xl py-10">
    <div class="hawk-card">
        <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Auth</div>
        <h1 class="text-2xl font-semibold tracking-tight">Confirm email</h1>

        <div class="mt-4">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
        </div>

        <div class="mt-6 pt-6 border-t border-[color:var(--border-primary)]">
            <a class="hawk-btn hawk-btn-primary" asp-page="./Login">Back to log in</a>
        </div>
    </div>
</div>

