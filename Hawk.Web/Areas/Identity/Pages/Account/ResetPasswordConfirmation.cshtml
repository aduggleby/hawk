@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Password reset";
}

<div class="mx-auto max-w-xl py-10">
    <div class="hawk-card">
        <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Auth</div>
        <h1 class="text-2xl font-semibold tracking-tight">Password updated</h1>
        <p class="text-sm text-zinc-600 mt-2">
            Your password has been reset. You can now log in.
        </p>

        <div class="mt-6">
            <a class="hawk-btn hawk-btn-primary" asp-page="./Login">Log in</a>
        </div>
    </div>
</div>

