@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<div class="mx-auto max-w-xl py-10">
    <div class="hawk-card">
        <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Auth</div>
        <h1 class="text-2xl font-semibold tracking-tight">Log out</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p class="text-sm text-zinc-600 mt-2">You are currently signed in. Confirm to end your session.</p>

            <form class="mt-6"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  method="post">
                <button type="submit" class="hawk-btn hawk-btn-danger w-full">Log out</button>
            </form>
        }
        else
        {
            <p class="text-sm text-zinc-600 mt-2">You have successfully logged out.</p>
            <div class="mt-6">
                <a class="hawk-btn hawk-btn-primary" asp-area="" asp-page="/Index">Home</a>
            </div>
        }
    </div>
</div>

