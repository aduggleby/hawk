@page
@model ForgotPasswordConfirmation

@{
    ViewData["Title"] = "Reset link sent";
}

<div class="mx-auto max-w-xl py-10">
    <div class="hawk-card">
        <div class="text-xs font-mono uppercase tracking-tight text-zinc-500">Auth</div>
        <h1 class="text-2xl font-semibold tracking-tight">Check your email</h1>
        <p class="text-sm text-zinc-600 mt-2">
            If an account exists for that address, you will receive a password reset link shortly.
        </p>

        <div class="mt-6">
            <a class="hawk-btn hawk-btn-primary" asp-page="./Login">Back to log in</a>
        </div>
    </div>
</div>

