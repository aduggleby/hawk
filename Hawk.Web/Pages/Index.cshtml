@page
@* <summary>Hawk dashboard landing page (placeholder until monitors UI is implemented).</summary> *@
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="hawk-card">
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">Hawk</h1>
            <p class="text-sm text-zinc-600 mt-1">Hangfire-backed uptime checks, content verification, and alerting.</p>
        </div>
        <a class="hawk-btn hawk-btn-primary" asp-page="/Monitors/Index">Open monitors</a>
    </div>

    <div class="mt-5 grid grid-cols-1 md:grid-cols-3 gap-3 text-sm">
        <div class="rounded-xl border border-zinc-200 bg-white p-3">
            <div class="font-semibold">GET + POST</div>
            <div class="text-zinc-600 mt-1">Headers, content-type, and body supported.</div>
        </div>
        <div class="rounded-xl border border-zinc-200 bg-white p-3">
            <div class="font-semibold">Contains + Regex</div>
            <div class="text-zinc-600 mt-1">Verify response body content with rules.</div>
        </div>
        <div class="rounded-xl border border-zinc-200 bg-white p-3">
            <div class="font-semibold">SQL Server</div>
            <div class="text-zinc-600 mt-1">Identity, Hangfire, and monitor data stored together.</div>
        </div>
    </div>
</div>
