@page "{id}"
@* <summary>Admin reset password page.</summary> *@
@model Hawk.Web.Pages.Admin.Users.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="flex items-start justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-semibold tracking-tight">Reset password</h1>
        <p class="text-sm text-zinc-600 font-mono">@Model.Email</p>
    </div>
    <a class="hawk-btn-ghost" asp-page="/Admin/Users/Index">Back</a>
</div>

<form method="post" class="space-y-4 max-w-xl">
    <div class="hawk-card">
        <label class="hawk-label">New password</label>
        <input class="hawk-input mt-2 font-mono" asp-for="Input.NewPassword" type="password" />
        <div class="text-sm text-red-700 mt-1" asp-validation-for="Input.NewPassword"></div>
    </div>

    <div class="text-sm text-red-700" asp-validation-summary="All"></div>

    <div class="flex items-center gap-2">
        <button class="hawk-btn-primary" type="submit">Reset</button>
        <a class="hawk-btn-ghost" asp-page="/Admin/Users/Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

