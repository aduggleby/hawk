@page
@* <summary>Account settings (alerting + crawler settings).</summary> *@
@model Hawk.Web.Pages.Account.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="flex items-start justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-semibold tracking-tight">Settings</h1>
        <p class="text-sm text-zinc-600">Account-wide overrides for alerting and crawling.</p>
    </div>
    <a class="hawk-btn hawk-btn-ghost" asp-page="/Monitors/Index">Back</a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-4">
    <div class="lg:col-span-6">
        <div class="hawk-card">
            <div class="font-semibold mb-2">Alerting</div>
            <div class="text-sm text-zinc-600 mb-4">
                Fallback order:
                <span class="font-mono">Monitor override</span>
                <span class="mx-2 text-zinc-400">→</span>
                <span class="font-mono">Account override</span>
                <span class="mx-2 text-zinc-400">→</span>
                <span class="font-mono">Login email</span>
            </div>

            <form method="post" asp-page-handler="Alerting" class="space-y-3">
                <div>
                    <label class="hawk-label" asp-for="AlertEmail"></label>
                    <input class="hawk-input mt-2 font-mono" asp-for="AlertEmail" placeholder="alerts@yourdomain" />
                    <div class="hawk-error-message" asp-validation-for="AlertEmail"></div>
                </div>
                <div class="flex items-center gap-2">
                    <button class="hawk-btn hawk-btn-primary" type="submit">Save</button>
                    <a class="hawk-btn hawk-btn-ghost" asp-page="/Account/Settings">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="lg:col-span-6">
        <div class="hawk-card">
            <div class="font-semibold mb-2">Crawler</div>
            <div class="text-sm text-zinc-600 mb-4">
                Sets a default <span class="font-mono">User-Agent</span> for monitors you own (unless the monitor explicitly sets one).
            </div>

            <form method="post" asp-page-handler="Crawler" class="space-y-3">
                <div>
                    <label class="hawk-label" asp-for="UserAgent"></label>
                    <input class="hawk-input mt-2 font-mono" asp-for="UserAgent" placeholder="firefox (or a full UA string)" />
                    <div class="hawk-error-message" asp-validation-for="UserAgent"></div>
                    <div class="text-xs text-zinc-500 mt-2">
                        Presets:
                        <span class="font-mono">firefox</span>,
                        <span class="font-mono">chrome</span>,
                        <span class="font-mono">edge</span>,
                        <span class="font-mono">safari</span>,
                        <span class="font-mono">curl</span>.
                        You can also paste a full UA string.
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <button class="hawk-btn hawk-btn-primary" type="submit">Save</button>
                    <a class="hawk-btn hawk-btn-ghost" asp-page="/Account/Settings">Reset</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

