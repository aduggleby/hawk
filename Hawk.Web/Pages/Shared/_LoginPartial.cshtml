@using Microsoft.AspNetCore.Identity
@* <summary>Auth-aware nav fragment: shows login/register or hello/logout depending on session.</summary> *@
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex items-center gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <a class="hawk-btn-ghost font-mono" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@(User.Identity?.Name ?? "Account")</a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button type="submit" class="hawk-btn-ghost">Logout</button>
    </form>
}
else
{
    <a class="hawk-btn-ghost" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="hawk-btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
</div>
