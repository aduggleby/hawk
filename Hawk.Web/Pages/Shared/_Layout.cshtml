@* <summary>Global site layout (header/nav/footer) for the Hawk web app.</summary> *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hawk</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hawk.Web.styles.css" asp-append-version="true" />
</head>
<body class="hawk-shell">
    <header class="hawk-topbar">
        <div class="mx-auto max-w-6xl px-4 py-3">
            <div class="flex items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <a class="no-underline" asp-area="" asp-page="/Index">
                        <span class="inline-flex items-center gap-2 font-mono text-sm font-semibold tracking-tight">
                            <span class="inline-block h-2.5 w-2.5 rounded-full bg-green-500"></span>
                            HAWK
                        </span>
                    </a>
                    <nav class="hidden sm:flex items-center gap-3 text-sm">
                        <a class="no-underline text-zinc-700 hover:text-zinc-900" asp-area="" asp-page="/Monitors/Index">Monitors</a>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <a class="no-underline text-zinc-700 hover:text-zinc-900" asp-area="" asp-page="/Admin/Users/Index">Admin</a>
                            <a class="no-underline text-zinc-700 hover:text-zinc-900" href="/hangfire">Hangfire</a>
                        }
                        <a class="no-underline text-zinc-700 hover:text-zinc-900" asp-area="" asp-page="/Privacy">Privacy</a>
                    </nav>
                </div>
                <div class="flex items-center gap-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>

    <main class="mx-auto max-w-6xl px-4 py-6">
        @RenderBody()
    </main>

    <footer class="mx-auto max-w-6xl px-4 py-10 text-xs text-zinc-500">
        <div class="flex items-center justify-between gap-3">
            <div class="font-mono">hawk</div>
            <div>&copy; 2026 <a asp-area="" asp-page="/Privacy">Privacy</a></div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
