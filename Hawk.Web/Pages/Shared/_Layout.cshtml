@* <summary>Global site layout (header/nav/footer) for the Hawk web app.</summary> *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hawk</title>
    <script>
        // Apply theme before first paint to avoid a light-theme flash.
        (() => {
            try {
                const stored = localStorage.getItem("hawk.theme");
                const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
                const isDark = stored === "dark" || (!stored && prefersDark);
                if (isDark) document.documentElement.classList.add("dark");
            } catch { /* ignore */ }
        })();
    </script>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<body class="hawk-shell">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header class="hawk-topbar">
        <div class="mx-auto max-w-6xl px-4 py-3">
            <div class="flex items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <a class="no-underline" asp-area="" asp-page="/Index">
                        <span class="inline-flex items-center gap-2 font-mono text-sm font-semibold tracking-tight">
                            <span class="inline-block h-3 w-3 rounded-sm bg-[color:var(--text-primary)] shadow-[0_0_0_3px_color-mix(in_srgb,var(--text-primary)_8%,transparent)]"></span>
                            HAWK
                        </span>
                    </a>
                    <nav class="hidden sm:flex items-center gap-3 text-sm">
                        <a class="hawk-btn hawk-btn-ghost hawk-btn-sm" asp-area="" asp-page="/Monitors/Index">Monitors</a>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <a class="hawk-btn hawk-btn-ghost hawk-btn-sm" asp-area="" asp-page="/Admin/Users/Index">Admin</a>
                            <a class="hawk-btn hawk-btn-ghost hawk-btn-sm" href="/hangfire">Hangfire</a>
                        }
                        <a class="hawk-btn hawk-btn-ghost hawk-btn-sm" asp-area="" asp-page="/Privacy">Privacy</a>
                    </nav>
                </div>
                <div class="flex items-center gap-3">
                    <button id="theme-toggle" type="button" class="hawk-btn hawk-btn-ghost" aria-label="Toggle theme" aria-pressed="false">
                        <svg class="h-5 w-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707" />
                        </svg>
                        <svg class="h-5 w-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                        </svg>
                    </button>
                    <button id="mobile-menu-toggle" type="button" class="hawk-btn hawk-btn-ghost sm:hidden" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>

    <div id="mobile-menu" class="fixed inset-0 z-50 sm:hidden" hidden>
        <div id="mobile-menu-backdrop" class="fixed inset-0 opacity-0 transition-opacity duration-200 bg-[color-mix(in_srgb,var(--text-primary)_45%,transparent)]"></div>
        <nav id="mobile-menu-panel"
             class="fixed left-0 top-0 bottom-0 w-72 max-w-[85vw] -translate-x-full transition-transform duration-200 border-r border-[color:var(--border-primary)] bg-[color:var(--bg-primary)] shadow-[var(--shadow-hard)]"
             role="dialog"
             aria-modal="true"
             aria-label="Mobile navigation">
            <div class="flex items-center justify-between px-4 py-4 border-b border-[color:var(--border-primary)]">
                <a class="no-underline" asp-area="" asp-page="/Index">
                    <span class="inline-flex items-center gap-2 font-mono text-sm font-semibold tracking-tight">
                        <span class="inline-block h-3 w-3 rounded-sm bg-[color:var(--text-primary)] shadow-[0_0_0_3px_color-mix(in_srgb,var(--text-primary)_8%,transparent)]"></span>
                        HAWK
                    </span>
                </a>
                <button id="mobile-menu-close" type="button" class="hawk-btn hawk-btn-ghost" aria-label="Close menu">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="px-4 py-4 space-y-2">
                <a class="hawk-btn hawk-btn-ghost w-full justify-start" asp-area="" asp-page="/Monitors/Index">Monitors</a>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <a class="hawk-btn hawk-btn-ghost w-full justify-start" asp-area="" asp-page="/Admin/Users/Index">Admin</a>
                    <a class="hawk-btn hawk-btn-ghost w-full justify-start" href="/hangfire">Hangfire</a>
                }
                <a class="hawk-btn hawk-btn-ghost w-full justify-start" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </nav>
    </div>

    <main id="main-content" class="mx-auto max-w-6xl px-4 py-6">
        @RenderBody()
    </main>

    <footer class="mx-auto max-w-6xl px-4 py-10 text-xs text-zinc-500">
        <div class="flex items-center justify-between gap-3">
            <div class="font-mono">hawk</div>
            <div>&copy; 2026 <a asp-area="" asp-page="/Privacy">Privacy</a></div>
        </div>
    </footer>

    <script src="~/js/theme.js" asp-append-version="true"></script>
    <script src="~/js/mobile-menu.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
