@page "{id:guid}"
@* <summary>Monitor details and run history.</summary> *@
@model Hawk.Web.Pages.Monitors.DetailsModel
@{
    ViewData["Title"] = Model.Monitor?.Name ?? "Monitor";
}

@if (Model.Monitor is null)
{
    <div class="hawk-card border-red-200">
        <div class="text-sm text-red-800">Monitor not found.</div>
    </div>
    return;
}

<div class="flex items-start justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-semibold tracking-tight mb-1">@Model.Monitor.Name</h1>
        <div class="text-sm text-zinc-600 font-mono">
            <span class="rounded-lg border border-zinc-200 bg-white px-2 py-1 text-xs">@Model.Monitor.Method</span>
            <span class="mx-2 text-zinc-400">Â·</span>
            <span>@Model.Monitor.Url</span>
        </div>
    </div>
    <div class="flex items-center gap-2">
        <form method="post" asp-page-handler="RunNow">
            <button class="hawk-btn-primary" type="submit">Run now</button>
        </form>
        <a class="hawk-btn-ghost" asp-page="/Monitors/Edit" asp-route-id="@Model.Monitor.Id">Edit</a>
        <a class="hawk-btn-ghost" asp-page="/Monitors/Index">Back</a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-4">
    <div class="lg:col-span-5 space-y-4">
        <div class="hawk-card">
            <div class="font-semibold mb-3">Config</div>
            <dl class="grid grid-cols-12 gap-y-2 text-sm">
                <dt class="col-span-4 text-zinc-600">Enabled</dt>
                <dd class="col-span-8 font-medium">@((Model.Monitor.Enabled) ? "Yes" : "No")</dd>
                <dt class="col-span-4 text-zinc-600">Interval</dt>
                <dd class="col-span-8 font-medium">@((Model.Monitor.IntervalSeconds < 60) ? $"{Model.Monitor.IntervalSeconds}s" : $"{Model.Monitor.IntervalSeconds / 60}m")</dd>
                <dt class="col-span-4 text-zinc-600">Timeout</dt>
                <dd class="col-span-8 font-medium">@Model.Monitor.TimeoutSeconds s</dd>
                <dt class="col-span-4 text-zinc-600">Last run</dt>
                <dd class="col-span-8">@((Model.Monitor.LastRunAt?.ToLocalTime().ToString("g")) ?? "-")</dd>
                <dt class="col-span-4 text-zinc-600">Next run</dt>
                <dd class="col-span-8">@((Model.Monitor.NextRunAt?.ToLocalTime().ToString("g")) ?? "-")</dd>
            </dl>
        </div>

        <div class="hawk-card">
            <div class="font-semibold mb-3">Headers</div>
            @if (Model.Monitor.Headers.Count == 0)
            {
                <div class="text-sm text-zinc-600">None.</div>
            }
            else
            {
                <ul class="space-y-1 text-xs font-mono">
                    @foreach (var h in Model.Monitor.Headers)
                    {
                        <li><span class="text-zinc-600">@h.Name</span>: <span>@h.Value</span></li>
                    }
                </ul>
            }
        </div>

        <div class="hawk-card">
            <div class="font-semibold mb-3">Match rules</div>
            @if (Model.Monitor.MatchRules.Count == 0)
            {
                <div class="text-sm text-zinc-600">None.</div>
            }
            else
            {
                <ul class="space-y-1 text-xs font-mono">
                    @foreach (var r in Model.Monitor.MatchRules)
                    {
                        <li><span class="text-zinc-600">@r.Mode</span>: <span>@r.Pattern</span></li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="lg:col-span-7">
        <div class="hawk-card p-0 overflow-hidden">
            <div class="px-4 py-4 border-b border-zinc-100">
                <div class="font-semibold">Recent runs</div>
            </div>
            @if (Model.Runs.Count == 0)
            {
                <div class="px-4 py-6 text-sm text-zinc-600">No runs yet.</div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full text-sm">
                        <thead class="bg-zinc-50 text-zinc-600">
                        <tr>
                            <th class="text-left font-semibold px-4 py-3">When</th>
                            <th class="text-left font-semibold px-4 py-3">Status</th>
                            <th class="text-left font-semibold px-4 py-3">Duration</th>
                            <th class="text-left font-semibold px-4 py-3">Result</th>
                            <th class="text-left font-semibold px-4 py-3">Alert</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-zinc-100">
                        @foreach (var r in Model.Runs)
                        {
                            <tr class="hover:bg-zinc-50/70">
                                <td class="px-4 py-3">@r.StartedAt.ToLocalTime().ToString("g")</td>
                                <td class="px-4 py-3 font-mono text-xs"><span class="rounded-lg border border-zinc-200 bg-white px-2 py-1">@(r.StatusCode?.ToString() ?? "-")</span></td>
                                <td class="px-4 py-3 text-zinc-700">@r.DurationMs ms</td>
                                <td class="px-4 py-3">
                                    @if (r.Success)
                                    {
                                        <span class="hawk-badge-ok">OK</span>
                                    }
                                    else
                                    {
                                        <span class="hawk-badge-fail">FAIL</span>
                                        <span class="text-xs text-zinc-600 ml-2">@r.ErrorMessage</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-xs text-zinc-600">
                                    @if (!r.Success)
                                    {
                                        @((r.AlertSent) ? "sent" : (r.AlertError ?? "not sent"))
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
