@page "{id:guid}"
@* <summary>Monitor details and run history.</summary> *@
@model Hawk.Web.Pages.Monitors.DetailsModel
@{
    ViewData["Title"] = Model.Monitor?.Name ?? "Monitor";
}

@if (Model.Monitor is null)
{
    <div class="hawk-card border-[color:var(--text-primary)] border-dashed">
        <div class="text-sm">Monitor not found.</div>
    </div>
    return;
}

<div class="flex items-start justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-semibold tracking-tight mb-1">@Model.Monitor.Name</h1>
        <div class="text-sm text-[color:var(--text-secondary)] font-mono">
            <span class="rounded-lg border border-[color:var(--border-primary)] bg-[color:var(--bg-secondary)] px-2 py-1 text-xs text-[color:var(--text-primary)]">@Model.Monitor.Method</span>
            <span class="mx-2 text-[color:var(--text-muted)]">Â·</span>
            <span>@Model.Monitor.Url</span>
        </div>
    </div>
    <div class="flex items-center gap-2">
        <form id="run-now-form" method="post" asp-page-handler="RunNow">
            <button class="hawk-btn hawk-btn-primary" type="submit">Run now</button>
        </form>
        <a class="hawk-btn hawk-btn-ghost" asp-page="/Monitors/Edit" asp-route-id="@Model.Monitor.Id">Edit</a>
        <a class="hawk-btn hawk-btn-ghost" asp-page="/Monitors/Index">Back</a>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const intervalSeconds = @Model.Monitor.IntervalSeconds;
            if (!Number.isFinite(intervalSeconds) || intervalSeconds < 1) return;

            const refreshMs = intervalSeconds * 1000;
            let timer = window.setTimeout(() => {
                window.location.reload();
            }, refreshMs);

            // Keep the page update cadence aligned with the monitor interval.
            const runNowForm = document.getElementById("run-now-form");
            if (runNowForm) {
                runNowForm.addEventListener("submit", () => {
                    window.clearTimeout(timer);
                });
            }
        })();
    </script>
}

<div class="grid grid-cols-1 lg:grid-cols-12 gap-4">
    <div class="lg:col-span-5 space-y-4">
        <div class="hawk-card">
            <div class="font-semibold mb-3">Config</div>
            <dl class="grid grid-cols-12 gap-y-4 text-sm">
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Status</dt>
                <dd class="col-span-8 font-medium py-1">
                    @if (!Model.Monitor.Enabled)
                    {
                        <span class="hawk-badge hawk-badge-danger">Disabled</span>
                    }
                    else if (Model.Monitor.IsPaused)
                    {
                        <span class="hawk-badge hawk-badge-warning">Paused</span>
                    }
                    else
                    {
                        <span class="hawk-badge hawk-badge-success">Enabled</span>
                    }
                </dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Interval</dt>
                <dd class="col-span-8 font-medium py-1">@((Model.Monitor.IntervalSeconds < 60) ? $"{Model.Monitor.IntervalSeconds}s" : $"{Model.Monitor.IntervalSeconds / 60}m")</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Timeout</dt>
                <dd class="col-span-8 font-medium py-1">@Model.Monitor.TimeoutSeconds s</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Allowed status</dt>
                <dd class="col-span-8 font-mono text-xs break-words py-1">@(string.IsNullOrWhiteSpace(Model.Monitor.AllowedStatusCodes) ? "2xx only" : $"2xx + {Model.Monitor.AllowedStatusCodes}")</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Last run</dt>
                <dd class="col-span-8 py-1">@((Model.Monitor.LastRunAt?.ToLocalTime().ToString("g")) ?? "-")</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Next run</dt>
                <dd class="col-span-8 py-1">@((Model.Monitor.NextRunAt?.ToLocalTime().ToString("g")) ?? "-")</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Alert email</dt>
                <dd class="col-span-8 font-mono text-xs break-words py-1">@(!string.IsNullOrWhiteSpace(Model.Monitor.AlertEmailOverride) ? Model.Monitor.AlertEmailOverride : "-")</dd>
                <dt class="col-span-4 text-[color:var(--text-secondary)] pt-1">Run retention</dt>
                <dd class="col-span-8 font-medium py-1">@(Model.Monitor.RunRetentionDays is > 0 ? $"{Model.Monitor.RunRetentionDays} days (override)" : "Account/default policy")</dd>
            </dl>
        </div>

        <div class="hawk-card">
            <div class="font-semibold mb-3">Headers</div>
            @if (Model.Monitor.Headers.Count == 0)
            {
                <div class="text-sm text-[color:var(--text-secondary)]">None.</div>
            }
            else
            {
                <ul class="space-y-3 text-xs font-mono">
                    @foreach (var h in Model.Monitor.Headers)
                    {
                        <li class="py-1"><span class="text-[color:var(--text-secondary)]">@h.Name</span>: <span>@h.Value</span></li>
                    }
                </ul>
            }
        </div>

        <div class="hawk-card">
            <div class="font-semibold mb-3">Match rules</div>
            @if (Model.Monitor.MatchRules.Count == 0)
            {
                <div class="text-sm text-[color:var(--text-secondary)]">None.</div>
            }
            else
            {
                <ul class="space-y-3 text-xs font-mono">
                    @foreach (var r in Model.Monitor.MatchRules)
                    {
                        <li class="py-1"><span class="text-[color:var(--text-secondary)]">@r.Mode</span>: <span>@r.Pattern</span></li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="lg:col-span-7">
        <div class="hawk-card p-0 overflow-hidden">
            <div class="px-4 py-4 border-b border-[color:var(--border-primary)]">
                <div class="font-semibold">Recent runs</div>
            </div>
            @if (Model.Runs.Count == 0)
            {
                <div class="px-4 py-6 text-sm text-[color:var(--text-secondary)]">No runs yet.</div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full text-xs">
                        <thead class="bg-[color:var(--bg-secondary)] text-[color:var(--text-secondary)]">
                        <tr>
                            <th class="text-left font-semibold px-4 py-3">When</th>
                            <th class="text-left font-semibold px-4 py-3">Duration</th>
                            <th class="text-left font-semibold px-4 py-3">Result</th>
                        </tr>
                        </thead>
                        <tbody class="hawk-runs-tbody">
                        @foreach (var r in Model.Runs)
                        {
                            <tr class="hover:bg-[color:var(--bg-secondary)] cursor-pointer"
                                role="link"
                                tabindex="0"
                                onclick="window.location.href='@Url.Page("/Monitors/Runs/Details", new { monitorId = Model.Monitor.Id, runId = r.Id })'"
                                onkeydown="if (event.key === 'Enter' || event.key === ' ') { event.preventDefault(); window.location.href='@Url.Page("/Monitors/Runs/Details", new { monitorId = Model.Monitor.Id, runId = r.Id })'; }">
                                <td class="px-4 py-3">
                                    <a class="underline decoration-dotted underline-offset-2 hover:no-underline"
                                       asp-page="/Monitors/Runs/Details"
                                       asp-route-monitorId="@Model.Monitor.Id"
                                       asp-route-runId="@r.Id">
                                        @r.StartedAt.ToLocalTime().ToString("g")
                                    </a>
                                </td>
                                <td class="px-4 py-3 text-[color:var(--text-secondary)]">@r.DurationMs ms</td>
                                <td class="px-4 py-3">
                                    @if (r.Success)
                                    {
                                        <span class="hawk-badge hawk-badge-success">OK</span>
                                    }
                                    else
                                    {
                                        <span class="hawk-badge hawk-badge-danger">FAIL</span>
                                        <span class="text-xs text-[color:var(--text-secondary)] ml-2">@((r.ErrorMessage ?? "-").Length > 120 ? (r.ErrorMessage![..120] + "...") : (r.ErrorMessage ?? "-"))</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
