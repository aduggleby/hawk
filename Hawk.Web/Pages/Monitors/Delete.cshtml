@page "{id:guid}"
@* <summary>Delete monitor confirmation page.</summary> *@
@model Hawk.Web.Pages.Monitors.DeleteModel
@{
    ViewData["Title"] = "Delete monitor";
}

@if (Model.Monitor is null)
{
    <div class="alert alert-danger">Monitor not found.</div>
    return;
}

<h1 class="h3 mb-3">Delete monitor</h1>

<div class="alert alert-warning">
    This will permanently delete <b>@Model.Monitor.Name</b> and its run history.
</div>

<form method="post" class="d-flex gap-2">
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-outline-secondary" asp-page="/Monitors/Details" asp-route-id="@Model.Monitor.Id">Cancel</a>
</form>

