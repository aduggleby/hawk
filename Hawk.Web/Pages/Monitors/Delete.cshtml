@page "{id:guid}"
@* <summary>Delete monitor confirmation page.</summary> *@
@model Hawk.Web.Pages.Monitors.DeleteModel
@{
    ViewData["Title"] = "Delete monitor";
}

@if (Model.Monitor is null)
{
    <div class="hawk-card border-red-200">
        <div class="text-sm text-red-800">Monitor not found.</div>
    </div>
    return;
}

<div class="flex items-start justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-semibold tracking-tight">Delete monitor</h1>
        <p class="text-sm text-zinc-600">This action cannot be undone.</p>
    </div>
    <a class="hawk-btn-ghost" asp-page="/Monitors/Details" asp-route-id="@Model.Monitor.Id">Back</a>
</div>

<div class="hawk-card border-red-200">
    <div class="text-sm">
        This will permanently delete <b>@Model.Monitor.Name</b> and its run history.
    </div>
    <div class="text-xs text-zinc-600 mt-2 font-mono">@Model.Monitor.Method @Model.Monitor.Url</div>
</div>

<form method="post" class="flex items-center gap-2 mt-4">
    <button class="hawk-btn-danger" type="submit">Delete</button>
    <a class="hawk-btn-ghost" asp-page="/Monitors/Details" asp-route-id="@Model.Monitor.Id">Cancel</a>
</form>
