@page
@* <summary>Monitors list page.</summary> *@
@model Hawk.Web.Pages.Monitors.IndexModel
@{
    ViewData["Title"] = "Monitors";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-0">Monitors</h1>
        <p class="text-muted mb-0">Uptime and content verification checks.</p>
    </div>
    <div>
        <a class="btn btn-primary" asp-page="/Monitors/Create">New monitor</a>
    </div>
</div>

@if (Model.Monitors.Count == 0)
{
    <div class="alert alert-secondary">
        No monitors yet. Create your first one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
            <tr>
                <th>Name</th>
                <th>Method</th>
                <th>URL</th>
                <th>Enabled</th>
                <th>Last run</th>
                <th>Next run</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var m in Model.Monitors)
            {
                <tr>
                    <td class="fw-semibold">@m.Name</td>
                    <td><code>@m.Method</code></td>
                    <td class="text-truncate" style="max-width: 420px;"><code>@m.Url</code></td>
                    <td>@(m.Enabled ? "Yes" : "No")</td>
                    <td>@(m.LastRunAt?.ToLocalTime().ToString("g") ?? "-")</td>
                    <td>@(m.NextRunAt?.ToLocalTime().ToString("g") ?? "-")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-page="/Monitors/Details" asp-route-id="@m.Id">View</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="/Monitors/Edit" asp-route-id="@m.Id">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

